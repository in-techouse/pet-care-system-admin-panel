<% extend ('../auth_layout')%>
<div class="container">
	<div class="jumbotron">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="user" class="label" style="color: black; font-size: 18pz;">Email</label>
                <input id="user" type="email" class="form-control" required name="email">                
            </div>
            <div class="form-group">
                <label for="user" class="label" style="color: black; font-size: 18pz;">Password</label>
                <input id="user" type="password" class="form-control" required name="password" minlength="6">                
            </div>
            <div class="form-group">
             <% if(error != ""){ %>
                <div class="form-group form-success-gone">
                    <div class="alert alert-danger">
                        <%- error  %>

                    </div>
                  
                </div>
                <% } %>

                    <input type="submit" class="btn btn-block btn-primary" value="LOGIN">                
            </div>
        </form>
	</div>
</div>
	
