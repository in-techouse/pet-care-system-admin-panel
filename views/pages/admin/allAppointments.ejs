<% extend ('../../layout')%>

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1>All Appointments</h1>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <td>Pet Category</td>
                            <td>Date</td>
                            <td>Time</td>
                            <td>Address</td>
                            <td>Details</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(d=> { %>
                        <tr>
                            <td><%= d.val().category %></td>
                            <td><%= d.val().date %></td>
                            <td><%= d.val().time %></td>
                            <td><%= d.val().address %></td>
                            <td><a href="/admin/appointmentDetail?id=<%= d.val().id %>"
                                    class="btn btn-primary">Details</a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>