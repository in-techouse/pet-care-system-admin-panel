<% extend ('../../layout')%>

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1>All Orders</h1>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <td>Customer Name</td>
                            <td>Customer Email</td>
                            <td>Customer Contact</td>
                            <td>Total Items</td>
                            <td>Total Price</td>
                            <td>Show Details</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(d=> { %>
                        <tr>
                            <td><%= d.val().firstName %> <%= d.val().lastName %></td>
                            <td><%= d.val().email %></td>
                            <td><%= d.val().phoneNumber %></td>
                            <td><%= d.val().totalItems %></td>
                            <td><%= d.val().totalPrice %> PKR</td>
                            <td><a href="/admin/orderDetail?id=<%= d.val().id %>" class="btn btn-primary">Details</a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>