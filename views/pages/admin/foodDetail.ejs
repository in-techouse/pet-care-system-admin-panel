<% extend ('../../layout')%>
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <!-- Form Elements -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Food Detail
                    </div>
                    <div class="panel-body">
                        <!-- <div class="row"> -->
                        <div class="col-md-6">
                            <img src="<%= d.val().image %>" class="img-responsive img-thumbnail" />
                        </div>
                        <div class="col-md-6">
                            <h2><%= d.val().name %></h2>
                            <div class="container-fluid">
                                <label class="valueLabel"><b>Quantity</b></label>
                                <label class="value"><%= d.val().quantity%></label>
                            </div>
                            <div class="container-fluid">
                                <label class="valueLabel"><b>Price</b></label>
                                <label class="value"><%= d.val().price%> PKR</label>
                            </div>
                            <div class="container-fluid">
                                <label class="valueLabel"><b>Weight</b></label>
                                <label class="value"><%= d.val().weight%></label>
                            </div>
                            <div class="container-fluid">
                                <label class="valueLabel"><b>Type</b></label>
                                <label class="value"><%= d.val().type%></label>
                            </div>
                            <div class="container-fluid" style="margin-top: 40px;">
                                <a href="/admin/editFood?id=<%= d.val().id %>"
                                    class="btn btn-warning btn-block">Edit</a>
                            </div>
                        </div>
                        <!-- </div> -->
                    </div>
                </div>
                <!-- End Form Elements -->
            </div>
        </div>
    </div>
</div>