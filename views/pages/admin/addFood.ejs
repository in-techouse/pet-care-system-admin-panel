<% extend ('../../layout')%>

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>New Food Item</h2>
                <h5>Add a new Food Item. </h5>

            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <div class="row">
            <div class="col-md-12">
                <!-- Form Elements -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Food Element
                    </div>
                    <div class="panel-body">
                        <form role="form" method="POST" action="/admin/addFood">
                            <div class="row">
                                <%- include('./imageShared')%>
                                <!-- Left Side -->
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label>Food Name</label>
                                        <input class="form-control" name="foodName" required type="text" />
                                    </div>

                                    <div class="form-group">
                                        <label> Food Quantity (Stock) </label>
                                        <input class="form-control" name="foodQuantity" required type="number" />
                                    </div>

                                    <div class="form-group">
                                        <label> Weight of Food (Specify weight & unit both. e.g. '10 GM', '2 KG')
                                        </label>
                                        <input class="form-control" name="foodWeight" required type="text" />
                                    </div>


                                </div>
                                <!-- Right Side -->
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label>Food Type</label>
                                        <select name="foodType" class="form-control" required>
                                            <option value="Dog Food">Dog Food</option>
                                            <option value="Cat Food">Cat Food</option>
                                            <option value="Fish Food">Fish Food</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label> Food Price </label>
                                        <input type="number" class="form-control" name="foodPrice" required />
                                    </div>

                                </div>

                            </div>
                            <input id="submit" type="submit" value="SAVE" class="btn btn-block btn-primary" required />
                        </form>
                    </div>
                </div>
                <!-- End Form Elements -->
            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
</div>