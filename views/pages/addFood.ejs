<% extend ('../layout')%>

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>New Food Item</h2>
                <h5>Add a new Food Item. </h5>

            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <div class="row">
            <div class="col-md-12">
                <!-- Form Elements -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Food Element
                    </div>
                    <div class="panel-body">
                        <form role="form" method="POST" action="/admin/addFood"  >
                            <div class="row">
                                <!-- Left Side -->
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label>Food Name</label>
                                        <input class="form-control" name="foodName" required/>
                                    </div>

                                    <div class="form-group">
                                        <label> Food Quantity </label>
                                        <input class="form-control" name="foodQuantity" required/>
                                    </div>
                                    
                                    
                                </div>
                                <!-- Right Side -->
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label>Food Type</label>
                                        <input class="form-control" name="foodType" required/>
                                    </div>

                                    <div class="form-group">
                                        <label> Food Price </label>
                                        <input class="form-control" name="foodPrice" required/>
                                    </div>

                                </div>

                            </div>
                            <input type="submit" value="SAVE" class="btn btn-block btn-primary" required/>
                        </form>
                    </div>
                </div>
                <!-- End Form Elements -->
            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
</div>