<% extend ('../layout')%>
<div id="page-wrapper">
    <div id="page-inner">
        <!-- Start from here -->
        <!-- <div class="container"> -->

        <div class="panel panel-default">
            <div class="panel-heading">
                All Food Items
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                
                                <th>Name</th>
                                <th>Type</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Edit</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                            <% data.forEach(d=> { %>
                                <tr>
                                    
                                    <td><%= d.val().name %></td> 
                                    <td><%= d.val().type %></td>
                                   <td><%= d.val().quantity %></td>
                                   <td><%= d.val().price %>$</td>
                                   <td><a href="/admin/editfood?id=<%= d.val().id %>" class="btn btn-warning">Edit</a></td>
                                   <td><a href="/admin/fooddetail?id=<%= d.val().id %>" class="btn btn-primary">Details</a></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>
</div>
</div>